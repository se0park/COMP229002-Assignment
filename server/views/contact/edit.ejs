<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<main class="container" style="width: 650px;">
    <div class="jumbotron">
      <center><p id="top_title"> <%= title %> <span class="point"> </p></center>
        <hr>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="usernameTextField">User Name</label>
                    <input type="text" class="form-control"
                    id="usernameTextField"
                    placeholder="Enter the User Name"
                    name="username" 
                    value="<%= contact.username %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="passwordTextArea">Password</label>
                    <input type="text" class="form-control"
                    id="passwordTextArea"
                    placeholder="Enter the a password"
                    name="password" 
                    value="<%= contact.password %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="email">Email </label>
                    <input type="email" class="form-control"
                    name="email" placeholder="Enter Email Address"
                    id="email" required>
                </div>

                <div class="form-group">
                    <label for="contactnumberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="contactnumberTextField" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" 
                    placeholder="Enter Contact Number"
                    name="contactnumber" 
                    value="<%= contact.contactnumber %>"
                    required>
                    <small>Format: 123-456-7890</small>
                </div>

                <div class="form-group">
                    <label for="homeaddress">Home Address</label>
                    <input type="text" class="form-control"
                    name="homeaddress" placeholder="Enter the home address"
                    id="homeaddress" required>               
                 </div>

                 <center>
                    <button class="btn btn-primary btn-lg" type="submit" style="background-color: rgb(71, 71, 137); border: 0;outline: 0;"> 
                    <i class="fa fa-check-circle"></i>&emsp; Submit</button>
                    &emsp;&emsp;
                    <a href="/contact-list" class="btn btn-warning btn-lg" style="background-color: rgb(138, 138, 150); border: 0;outline: 0;">
                    <i class="fa fa-trash"></i>&emsp; Cancel</a>
                </center>
                </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>