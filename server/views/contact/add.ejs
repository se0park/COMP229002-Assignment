<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<main class="container" style="width: 650px;">
    <div class="jumbotron">
      <center><p id="top_title"> <%= title %> <span class="point"> </p></center>
        <hr>
            <form class="form" method="POST">
                <div class="form-group">
                   <label for="usernameTextField">User Name</label>
                   <input type="text" class="form-control"
                   id="usernameTextField"
                   placeholder="Enter the User Name"
                   name="username" required>
               </div>

               <div class="form-group">
                <label for="passwordTextField">Password</label>
                <input type="text" class="form-control"
                id="passwordTextField"
                placeholder="Enter the a password"
                name="password" ></input>
            </div>      

               <div class="form-group">
                <label for="contactnumberTextField">Contact Number</label>
                <input type="text" class="form-control"
                id="contactnumberTextField"
                placeholder="Enter Contact Number"
                name="contactnumber" required>
            </div>

               <div class="form-group">
                   <label for="authorTextField">Email</label>
                   <input type="text" class="form-control"
                   id="authorTextField"
                   placeholder="Enter the email"
                   name="email" required>
               </div>

               <div class="form-group">
                <label for="homeaddressTextField">Home Address</label>
                <input type="text" class="form-control"
                id="homeaddressTextField"
                placeholder="Enter the home address"
                name="homeaddress" required>
            </div>    
            
            <center>
                <button class="btn btn-primary btn-lg" type="submit" style="background-color: rgb(71, 71, 137); border: 0;outline: 0;"> 
                <i class="fa fa-check-circle"></i>&emsp; Submit</button>
                &emsp;&emsp;
                <a href="/contact-list" class="btn btn-warning btn-lg" style="background-color: rgb(138, 138, 150); border: 0;outline: 0;">
                <i class="fa fa-trash"></i>&emsp; Cancel</a>
            </center>
            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

